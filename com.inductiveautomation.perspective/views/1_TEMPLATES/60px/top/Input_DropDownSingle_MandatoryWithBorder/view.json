{
  "custom": {},
  "params": {
    "IsBorder": false,
    "highlight": false,
    "options": [],
    "selection": null,
    "text": "Time"
  },
  "propConfig": {
    "params.IsBorder": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.highlight": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.options": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.selection": {
      "paramDirection": "inout"
    },
    "params.text": {
      "paramDirection": "input",
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 50,
      "width": 90
    }
  },
  "root": {
    "children": [
      {
        "children": [
          {
            "meta": {
              "name": "Label"
            },
            "position": {
              "shrink": 0
            },
            "propConfig": {
              "props.text": {
                "binding": {
                  "config": {
                    "path": "view.params.text"
                  },
                  "type": "property"
                }
              }
            },
            "props": {
              "style": {
                "classes": "Text/Add_HeaderText"
              }
            },
            "type": "ia.display.label"
          },
          {
            "meta": {
              "name": "Asterix"
            },
            "position": {
              "basis": "25px",
              "grow": 1
            },
            "props": {
              "style": {
                "color": "#FF7a59",
                "marginLeft": "5px"
              },
              "text": "*"
            },
            "type": "ia.display.label"
          }
        ],
        "meta": {
          "name": "Header"
        },
        "position": {
          "basis": "25px",
          "shrink": 0
        },
        "type": "ia.container.flex"
      },
      {
        "meta": {
          "name": "Dropdown"
        },
        "position": {
          "basis": "25px",
          "shrink": 0
        },
        "propConfig": {
          "props.options": {
            "binding": {
              "config": {
                "path": "view.params.options"
              },
              "type": "property"
            }
          },
          "props.style.borderStyle": {
            "binding": {
              "config": {
                "expression": "if({view.params.IsBorder}, \u0027solid\u0027, \u0027none\u0027)"
              },
              "type": "expr"
            }
          },
          "props.style.classes": {
            "binding": {
              "config": {
                "path": "view.params.highlight"
              },
              "transforms": [
                {
                  "code": "\tif value:\n\t\treturn \"Text/Add_InfoText_Orange\"\n\telse:\n\t\treturn \"Text/Add_InfoText\"\n\t\t",
                  "type": "script"
                }
              ],
              "type": "property"
            }
          },
          "props.value": {
            "binding": {
              "config": {
                "bidirectional": true,
                "path": "view.params.selection"
              },
              "type": "property"
            }
          }
        },
        "props": {
          "dropdownOptionStyle": {
            "classes": "Text/Add_InfoText"
          },
          "placeholder": {
            "icon": {
              "color": "#0d80e3"
            },
            "text": "Select"
          },
          "style": {
            "borderColor": "#3ec3d9",
            "borderWidth": "1.5px"
          }
        },
        "type": "ia.input.dropdown"
      }
    ],
    "meta": {
      "name": "root"
    },
    "props": {
      "direction": "column",
      "style": {
        "overflow": "hidden"
      }
    },
    "type": "ia.container.flex"
  }
}