{
  "custom": {},
  "params": {
    "IsEditable": true,
    "label": "label",
    "placeholder": "placeholder",
    "text": "text"
  },
  "propConfig": {
    "params.IsEditable": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.label": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.placeholder": {
      "paramDirection": "input",
      "persistent": true
    },
    "params.text": {
      "paramDirection": "inout",
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 60
    }
  },
  "root": {
    "children": [
      {
        "children": [
          {
            "meta": {
              "name": "Label"
            },
            "position": {
              "shrink": 0
            },
            "propConfig": {
              "props.text": {
                "binding": {
                  "config": {
                    "path": "view.params.label"
                  },
                  "type": "property"
                }
              }
            },
            "props": {
              "style": {
                "classes": "Text/Add_HeaderText"
              }
            },
            "type": "ia.display.label"
          },
          {
            "meta": {
              "name": "Asterix"
            },
            "position": {
              "basis": "25px",
              "shrink": 0
            },
            "props": {
              "style": {
                "classes": "Text/Add_HeaderText",
                "color": "#FF7a59"
              },
              "text": "*"
            },
            "type": "ia.display.label"
          }
        ],
        "meta": {
          "name": "FlexContainer"
        },
        "position": {
          "basis": "25px",
          "shrink": 0
        },
        "type": "ia.container.flex"
      },
      {
        "meta": {
          "name": "TextArea"
        },
        "position": {
          "basis": "29px",
          "shrink": 0
        },
        "propConfig": {
          "props.enabled": {
            "binding": {
              "config": {
                "path": "view.params.IsEditable"
              },
              "type": "property"
            }
          },
          "props.placeholder": {
            "binding": {
              "config": {
                "path": "view.params.placeholder"
              },
              "type": "property"
            }
          },
          "props.text": {
            "binding": {
              "config": {
                "bidirectional": true,
                "path": "view.params.text"
              },
              "type": "property"
            }
          }
        },
        "props": {
          "deferUpdates": false,
          "style": {
            "borderStyle": "none",
            "classes": "Text/Add_InfoText",
            "marginLeft": "10px",
            "marginRight": "10px"
          }
        },
        "type": "ia.input.text-area"
      }
    ],
    "meta": {
      "name": "root"
    },
    "props": {
      "direction": "column",
      "style": {
        "overflow": "hidden"
      }
    },
    "type": "ia.container.flex"
  }
}